{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "typeRoots": ["@types", ".src/@types", "./@types", "./node_modules/@types"]
  },
  "exclude": ["__tests__"]
}
